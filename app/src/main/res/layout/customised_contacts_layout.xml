<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/CardView.Light"
        app:cardUseCompatPadding="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgView_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/ic_perm_identity_black_18dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tv_displayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imgView_people"
                android:layout_toRightOf="@+id/imgView_people"
                android:layout_alignBaseline="@+id/imgView_people"
                android:layout_marginTop="5dp"/>

            <ImageView
                android:id="@+id/imgView_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:layout_below="@+id/imgView_people"
                android:src="@drawable/ic_perm_identity_black_18dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tv_displayGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imgView_gender"
                android:layout_toRightOf="@+id/imgView_gender"
                android:layout_below="@+id/tv_displayName"
                android:layout_marginTop="5dp"
                android:layout_alignBaseline="@+id/imgView_gender"/>

            <ImageView
                android:id="@+id/imgView_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:layout_below="@+id/imgView_gender"
                android:src="@drawable/ic_call_black_18dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tv_displayPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imgView_phone"
                android:layout_toRightOf="@+id/imgView_phone"
                android:layout_below="@+id/tv_displayGender"
                android:layout_marginTop="5dp"
                android:layout_alignBottom="@+id/imgView_phone"/>


            <ImageView
                android:id="@+id/imgView_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:layout_below="@+id/imgView_phone"
                android:src="@drawable/ic_email_black_18dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tv_displayEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imgView_email"
                android:layout_toRightOf="@+id/imgView_email"
                android:layout_below="@+id/tv_displayPhone"
                android:layout_marginTop="5dp"
                android:layout_alignBottom="@+id/imgView_email"/>

            <View
                android:id="@+id/viewId"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent"
                android:layout_below="@+id/imgView_email"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/viewId">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:contentDescription="@null"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_delete_black_24dp"
                    android:contentDescription="@null"/>
            </LinearLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>