<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/CardView.Light"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/tv_displayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorCustom_brown_900"/>

            <TextView
                android:id="@+id/tv_displayGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_displayName"
                android:textColor="@color/colorCustom_brown_900"/>

            <TextView
                android:id="@+id/tv_displayAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tv_displayGender"
                android:layout_toRightOf="@+id/tv_displayGender"
                android:layout_below="@+id/tv_displayName"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_alignBaseline="@+id/tv_displayGender"
                android:textColor="@color/colorCustom_brown_900"/>


            <TextView
                android:id="@+id/tv_displayPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_displayGender"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorCustom_brown_900"/>


            <TextView
                android:id="@+id/tv_displayEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_displayPhone"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorCustom_brown_900"/>

            <View
                android:id="@+id/viewId"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorCustom_brown_200"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_displayEmail"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/viewId"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/imgView_makeCall"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_call_black_18dp"
                    android:tint="@color/colorCustom_brown_700"
                    android:contentDescription="@null"/>


                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorCustom_brown_200"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    />

                <ImageView
                    android:id="@+id/imgView_sendSMS"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_textsms_black_24dp"
                    android:tint="@color/colorCustom_brown_700"
                    android:contentDescription="@null"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorCustom_brown_200"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    />

                <ImageView
                    android:id="@+id/imgView_sendEmail"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_email_black_18dp"
                    android:tint="@color/colorCustom_brown_700"
                    android:contentDescription="@null"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorCustom_brown_200"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    />

                <ImageView
                    android:id="@+id/imgView_edit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:tint="@color/colorCustom_brown_700"
                    android:contentDescription="@null"/>


            </LinearLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>